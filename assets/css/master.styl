@import '_settings'
@import '_typographic'

offDark = #167A8B
intenseDark = #111
light = #2DEA8F
offLight = #24B273
dark = #243D44
dark = #243D44
highlight = #C44F74

reset-css()
typographic()

// base
body
    margin 0
    letter-spacing vr-block(0.03)
    background dark

// map styles

.Map
    &-wrap
        fixed top 0 left 0
        z-index 100
        height 100vh

.datamaps-subunit
    stroke-width 0.3 !important
    stroke offDark !important

.datamaps
    &-arc
        stroke-width 0.3 !important
        stroke linear-gradient(to bottom, #1e5799 0%,#2989d8 50%,#207cca 51%,#7db9e8 100%) !important

.datamaps-subunit
    fill intenseDark !important

#map
    transition 1s
    backface-visibility hidden
    perspective 1000
    transform translateZ(0)
