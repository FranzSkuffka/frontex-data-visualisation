@import '_settings'
@import '_typographic'

reset-css()
typographic()

body
    margin 0

section
    size 100vw 100vh
    relative()
    overflow hidden
    display flex

.u-vBlock
    margin-top vr-block(4)

.Caption
    width vr-block(10)
    height vr-block(10)
    absolute top vr-block(8) right vr-block(2)
    &-title
        t-h3()
    &-text
        font-style italic

.BigNumber
    t-h1()
    font-weight bold
.IntroHeadline
    t-h4()

.Footer
    background black
    color white
    padding vr-block(2)

#Intro
    text-align center
    background red
    color white
    flex-direction column
    justify-content center

#Routes
    background green
    color white

#Nationalities
    background lightgreen

#Refusals
    background yellow

#StayersOnExit
    background lightgreen

#Stayers
    background yellow

#Facilitators
    background lightgreen

#Returns
    background yellow


.Map
    &-wrap
        fixed top 0 left 0
        z-index 100
        height 100vh
.datamap
    width 1682px
    height 928px

