@import '_settings'
@import '_typographic'

reset-css()
typographic()
border-box-html()

shadeBackground()
    *
        relative()
        z-index 100
    &:before
        background transparentify(black, black, 0.7)
        absolute top 0 left 0
        size 100%

        z-index 10
        content ''
        display block

// base
body
    width 1920px
    margin 0
    letter-spacing vr-block(0.03)
    background light

#FrontexVisualisation
    width 1920px
    margin 0 auto

// map styles


h2
    text-transform uppercase
    letter-spacing vr-block(0.07)
svg
    *
        fill dark
        color dark
.Map
    &-wrap
        fixed top 0 left 0
        z-index 100
        height 100vh

.datamaps-subunit
    stroke-width 0.3 !important
    stroke offDark !important

.datamaps
    &-arc
        stroke-width 0.3 !important
        stroke linear-gradient(to bottom, #1e5799 0%,#2989d8 50%,#207cca 51%,#7db9e8 100%) !important


#map
    transition 1s
    backface-visibility hidden
    perspective 1000
    transform translateZ(0)

.streamLayer
    cursor pointer
    transition 0.2s
    &:hover
        fill highlight
        opacity 1 !important

// prototyping
#Intro
    background url('../img/refugee-boat.jpg')
    min-height 100vh
    padding 20vh 500px
    background-size cover
    color white
    relative()
    h1
        font-size 70px
    *
        relative()
        z-index 100
        padding-bottom 50px
    shadeBackground()

#Outro
    background intenseDark
    padding vr-block(4)

@keyframes fadeIn
    0%
        opacity 0
    100%
        opacity 1
.Section
    // display flex
    flex-wrap wrap
    background light
    align-items center
    justify-content space-between
    min-height 100vh
    border-bottom 1px solid dark

    &-story
        background light
        padding vr-block(7) vr-block(15) 
        width 100%
        background-size cover !important
        color white
        shadeBackground()
    &-visualisation
        display block
        overflow hidden
        text
            font-size 16px




.axisY
    .tick
        line
            stroke dark
            transition 0.1s
            stroke-dasharray 1px 5px
        text
            transform translateX(-30px)
            font-family monospace
.axisX
    .tick
        line
            stroke light
            transition 0.1s
            stroke-width 1px
            stroke-dasharray 1px 5px
        text
            transform translateY(30px)
            font-family monospace
.tick
    &:hover
        line
            stroke highlight
            stroke-dasharray 5, 10
            stroke-width 2
        text
            color highlight !important
    line
        transition 0.1s
    text
        color dark
        transition 0.1s

.Section-visualisation
    display flex
    justify-content space-between
