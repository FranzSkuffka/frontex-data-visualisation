@import '_settings'
@import '_typographic'
@import '_storyBoard'

offDark = #167A8B
intenseDark = #111
light = #2DEA8F
offLight = #24B273
dark = #243D44
dark = #243D44

reset-css()
typographic()

body
    margin 0
    letter-spacing vr-block(0.03)
    background dark

.Section
    size 100vw 100vh
    relative()
    overflow hidden
    display flex
    align-items center
    justify-content flex-end
    transition background 0.3s ease-out

.u-vBlock
    margin-top vr-block(4)

.Caption
    z-index 100
    color light
    width vr-block(10)
    margin-right vr-block(3)
    relative()
    &-title
        t-h3()
        color offLight
        font-weight 100
    &-text a
        padding vr-block(0.1)
        margin vr-block(-0.1)
        border-bottom vr-block(0.05) solid offLight
        &:hover
            background-color intenseDark
    &:before
        content ''
        absolute top vr-block(2) left vr-block(1)
        background-color transparentify(dark, dark, 0.8)
        size 100%
        z-index -1

.BigNumber
    t-h1()
    font-weight bold
.IntroHeadline
    t-h4()

.Footer
    background intenseDark
    color white
    padding vr-block(2)

#Intro
    text-align center
    color white
    flex-direction column
    justify-content center

.Map
    &-wrap
        fixed top 0 left 0
        z-index 100
        height 100vh

#Visualizations
    width 1682px
    height 928px


.Refusals
    padding vr-block(2)

.link
    stroke light
    opacity 0.3
    fill transparent
    stroke-linecap round
    &:hover
        stroke red
        opacity 0.9
        z-index 200
        relative()

.country
    pointer-events none
.node
    cursor pointer
svg
    user-select none
    cursor default

.datamaps-subunit
    stroke-width 0.3 !important
    stroke offDark !important
.datamaps
    &-arc
        stroke-width 0.3 !important
        stroke linear-gradient(to bottom, #1e5799 0%,#2989d8 50%,#207cca 51%,#7db9e8 100%) !important


#Visualizations
    fixed top 0 left 0
    size 100vw 100vh
    z-index 50
.datamaps-subunit
    fill intenseDark !important

